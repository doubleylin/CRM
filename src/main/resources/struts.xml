<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <!--设置为开发模式, LOG日志会多一些-->
    <constant name="struts.devMode" value="true"/>
    <!--让Spring管理Action对象的创建-->
    <!--当然这个配置可以不写, 因为在struts2-spring-plugin里面已经有了-->
    <constant name="struts.objectFactory" value="spring"/>

    <constant name="struts.multipart.maxSize" value="10485760"/>
    <package name="common" extends="json-default">
        <interceptors>
            <interceptor name="Interceptor" class="com.lanou3g.crm.utils.Interceptor">
                <param name="includeMethods">addDepartment,addPost,addStaff,editStaff</param>
            </interceptor>
            <interceptor-stack name="myInterceptorStack">
                <interceptor-ref name="Interceptor"/>
                <interceptor-ref name="defaultStack"/>
            </interceptor-stack>
        </interceptors>
        <default-interceptor-ref name="myInterceptorStack"/>
        <global-results>
            <result name="miss">/pages/error.jsp</result>
        </global-results>
    </package>
    <package name="staff" extends="common">
        <action name="login"
                class="staffAction"
                method="login">

            <result name="success">/pages/frame.jsp</result>
            <result name="input">/pages/login.jsp</result>
            <result name="error">/pages/error.jsp</result>

        </action>
    </package>
    <package name="dept" extends="common">
        <default-class-ref
                class="com.lanou3g.crm.dept.action.DeptAction"/>
        <action name="findAll"
                class="deptAction"
                method="findAll">
            <result name="success">/pages/department/listDepartment.jsp</result>
        </action>
        <action name="save"
                class="deptAction"
                method="save">
            <result name="success" type="chain">findAll</result>
        </action>
    </package>
</struts>